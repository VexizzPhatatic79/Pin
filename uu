local Players = game:GetService("Players")
local Player = Players.LocalPlayer

-- UI Elements
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local TextBox = Instance.new("TextBox")
local TextButton = Instance.new("TextButton")

ScreenGui.Parent = Player:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

-- Frame Setup (Smaller Size)
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(33, 33, 33)
Frame.Position = UDim2.new(0.5, -100, 0.5, -75)
Frame.Size = UDim2.new(0, 200, 0, 150) -- Reduced size
Frame.Active = true
Frame.Draggable = true

-- Title Label (FainLord)
Title.Parent = Frame
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Font = Enum.Font.SourceSansBold
Title.Text = "FainLord"
Title.TextColor3 = Color3.fromRGB(255, 255, 0) -- Yellow Text
Title.TextSize = 24

-- TextBox Setup (Name Entry, Blue Background)
TextBox.Parent = Frame
TextBox.BackgroundColor3 = Color3.fromRGB(0, 0, 255) -- Blue background
TextBox.Position = UDim2.new(0.1, 0, 0.25, 0)
TextBox.Size = UDim2.new(0.8, 0, 0.2, 0)
TextBox.Font = Enum.Font.SourceSans
TextBox.PlaceholderText = "နာမည်ထည့်မည်" -- Placeholder in Myanmar
TextBox.Text = ""
TextBox.TextColor3 = Color3.fromRGB(0, 0, 0)
TextBox.TextSize = 14

-- TextButton Setup (Green Background)
TextButton.Parent = Frame
TextButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- Green background
TextButton.Position = UDim2.new(0.1, 0, 0.5, 0)
TextButton.Size = UDim2.new(0.8, 0, 0.4, 0)
TextButton.Font = Enum.Font.SourceSans
TextButton.Text = "လွှင့်ထွက်အောင်လုပ်မည်" -- Button label in Myanmar
TextButton.TextColor3 = Color3.fromRGB(255, 255, 255)
TextButton.TextSize = 20

-- GetPlayer Function: Finds the player using Username or Display Name
local function GetPlayer(Name)
    Name = Name:lower()
    for _, x in next, Players:GetPlayers() do
        if x ~= Player then
            if x.Name:lower():match("^" .. Name) or x.DisplayName:lower():match("^" .. Name) then
                return x
            end
        end
    end
    return nil
end

-- Message Function for Notifications
local function Message(_Title, _Text, Time)
    game:GetService("StarterGui"):SetCore("SendNotification", {Title = _Title, Text = _Text, Duration = Time})
end

-- SkidFling Function: Physically flings the target player
local function SkidFling(TargetPlayer)
    local character = Player.Character
    local targetCharacter = TargetPlayer.Character

    if character and targetCharacter then
        -- HumanoidRootPart of both the Player and the Target
        local hrp = character:FindFirstChild("HumanoidRootPart")
        local targetHrp = targetCharacter:FindFirstChild("HumanoidRootPart")

        if hrp and targetHrp then
            -- BodyVelocity to apply force
            local bodyVelocity = Instance.new("BodyVelocity")
            bodyVelocity.Velocity = Vector3.new(10000, 10000, 10000) -- Adjust the force here
            bodyVelocity.MaxForce = Vector3.new(100000, 100000, 100000) -- Maximum force allowed
            bodyVelocity.Parent = hrp

            -- Align Position to the target's root part
            hrp.CFrame = targetHrp.CFrame -- Align the player to the target player

            -- Apply force and fling
            wait(0.1) -- Wait before removing force
            bodyVelocity:Destroy() -- Remove the force after flinging
        end
    end
end

-- TextButton functionality
TextButton.MouseButton1Click:Connect(function()
    local targetName = TextBox.Text
    local targetPlayer = GetPlayer(targetName)

    if targetPlayer then
        SkidFling(targetPlayer)
    else
        Message("မှားနေသည်", "နာမည်မှားနေသည်", 5) -- Error message in Myanmar
    end
end)
