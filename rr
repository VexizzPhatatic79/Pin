-- Function to display notifications
local function notif(str, dur)
	game:GetService("StarterGui"):SetCore("SendNotification", { 
		Title = "Notification",
		Text = str,
		Duration = dur or 3
	})
end

-- Kill button logic
Kill.MouseButton1Click:Connect(function()
	local Player = gplr(Username.Text)
	if Player[1] then
		Player = Player[1]
		if Player.Character and Player.Character:FindFirstChild("Humanoid") then
			-- Kill the player by setting Humanoid Health to 0
			Player.Character.Humanoid.Health = 0
			notif("Player has been killed!", 3)
		else
			notif("Humanoid not found!", 3)
		end
	else
		notif("Player not found!", 3)
	end
end)

-- RGB Color Animation (Optional)
local function rgbAnimation(button)
	while wait() do
		for i = 0, 255, 10 do
			wait(0.05)
			button.BackgroundColor3 = Color3.fromRGB(i, 255-i, 0)
		end
		for i = 0, 255, 10 do
			wait(0.05)
			button.BackgroundColor3 = Color3.fromRGB(255-i, 0, i)
		end
		for i = 0, 255, 10 do
			wait(0.05)
			button.BackgroundColor3 = Color3.fromRGB(0, i, 255-i)
		end
	end
end

-- Apply RGB effect to buttons and title (Optional)
coroutine.wrap(rgbAnimation)(Kill)
coroutine.wrap(rgbAnimation)(title)
